
  <section id="container" >
    <!-- **********************************************************************************************************************************************************
    TOP BAR CONTENT & NOTIFICATIONS
    *********************************************************************************************************************************************************** -->
    <!--header start-->
   <%-include('newsfeed_headerAdminpainal')%>
    <!--header end-->
    
    <!-- **********************************************************************************************************************************************************
    MAIN SIDEBAR MENU
    *********************************************************************************************************************************************************** -->
    <!--sidebar start-->
  <%-include('newsfeed_sidebarAdminpainal')%>
    <!--sidebar end-->
    
    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i>Update Form</h3>
            
            <!-- BASIC FORM ELELEMNTS -->
            <div class="row mt">
               <div class="col-lg-6">
                 <div class="form-panel">
                      <h4 class="mb"><i class="fa fa-angle-right"></i>Updation</h4>
                    <form class="form-horizontal style-form" method="" action="/admin_data/userupdata_Data">
                        <input type="hidden" name="update_id" value="<%=data.user_id%>" class="form-control">
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">First Name</label>
                            <div class="col-sm-10">
                                <input type="text" name="first_name" placeholder="Enter you last name" class="form-control"
                                value="<%=data.first_name%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Last Name</label>
                            <div class="col-sm-10">
                                <input type="text" name="last_name" placeholder="Enter you last name" class="form-control"
                                value="<%=data.last_name%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Gender</label>
                            <div class="col-sm-10">
                              <%
                               if(data.gender == 'male')
                               {
                              %>  
                                <input type="radio" name="gender" value="male" checked>Male
                                <input type="radio" name="gender" value="female">Female
                              <%
                               }
                                else if(data.gender == 'female')
                              {
                             %>
                             <input type="radio" name="gender" value="male">Male
                             <input type="radio" name="gender" value="female" checked>Female
                             <%
                              }
                             %>   
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Address</label>
                            <div class="col-sm-10">
                                <input name="address" type="text" class="form-control" value="<%=data.address%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Contact</label>
                            <div class="col-sm-10">
                                <input name="contact" type="text" class="form-control" value="<%=data.contact%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Zip/Code</label>
                            <div class="col-sm-10">
                                <input name="zip_code" type="text" class="form-control" value="<%=data.zip_code%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Place</label>
                            <div class="col-sm-10">
                                <input name="place" type="text" class="form-control" value="<%=data.place%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">email</label>
                            <div class="col-sm-10">
                                <input name="email" type="email" class="form-control" value="<%=data.email%>">
                            </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-10">
                              <button type="submit" name="btn" value="edit" class="btn btn-theme">Update</button>
                              <button type="submit" class="btn btn-theme-danger btn-danger delbtn1">Delete</button>
                          </div>
                      </div>
                        
                    </form>
                </div>
            </div>
             <div class="row mt">
                <div class="col-lg-6">
                    <div class="form-panel">
                        <h4 class="mb"><i class="fa fa-angle-right"></i>Image Updation</h4>
                        <form class="form-horizontal style-form" method="POST" action="/admin_data/userupdate_Image" enctype="multipart/form-data">
                            <input name="edit_image" type="hidden" value="<%=data.user_id%>" class="form-control">
                            <div class="form-group">
                                <label class="control-label">Image</label>
                                <div class="col-sm-6">
                                    <img src="/uploads/<%=data.picture%>" width="200" height="200">
                                </div>
                                <div class="col-sm-6">
                                    <input name="picture" type="file" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                              <div class="col-sm-2">
                                  <button type="submit"class="btn btn-theme imgbtn">Update</button>
                                  <!-- <button type="submit" class="btn btn-theme-danger btn-danger delbtn">Delete</button> -->
                              </div>
                          </div>
                        </form>
                    </div>
                </div>
            </div>
           <!-- col-lg-6-->  
 <!-- /row -->
      </section>
    </section><!-- /MAIN CONTENT -->

    <!--main content end-->
    <!--footer start-->
  
    <!--footer end-->
</section>


